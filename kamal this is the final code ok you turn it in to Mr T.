boolean begin=true;
PImage img;
boolean end;
int xSpeed;
int ySpeed;
int y;
int x;
int h;
int w;
int a=3;
int w2=60;
int xCoor2;
int yCoor2;
int SxSpeed=20;
rocks[]newRocks;
int xC;
int yC;

void setup() {
  img=loadImage("image.jpg");
  size(1200, 700);
  xC=570;
  yC=655;
  xCoor2=600;
  yCoor2=695;
  rectMode(CENTER);
  newRocks= new rocks[35];
  startCircles();
}

void draw() {
  background(0);
  if (a>=3) {
    drawStartScreen();
  } else  {
    gameScreen();
 }
}

void gameScreen() {
  background(0);
  quickStrip();
  drawShip();
  moveShip();
  bounceship();
  startCircles2();
}
void endScreen(){
}

void keyPressed() {
}

void mousePressed() {
  a--;
}
void quickStrip() {
  int xCoor=5;
  for (int i=0; i<120; i++) {
    strokeWeight(2);
    fill(random(255), random(255), random(255), 150);
    ellipse(xCoor, 620, 10, 10);
    xCoor+=10;
  }
}
void drawStartScreen() {
  background(0);
  fill(random(255), random(255), random(255));
  textSize(30);
  textAlign(CENTER);
  text("Wecome to Asteriods/Space Invaders", 600, 200);
  textSize(25);
  text("click the mouse to begin", 600, 300);
  if (mousePressed) {
    begin=false;
    a=0;
  }
  text("There is no winning try to survive;{", 600, 500);
  text("Don't get hit by the asteriods you will die.", 600, 530);
  text("Which will result in you dying", 600, 560);
  textSize(30);
  text("Hence the game name ASTERIOD BELT!!!", 600, 620);
}
void startCircles() {
  for (int i=0; i<newRocks.length; i++) {
    newRocks[i]=new rocks(random(10, width-10), random(10, width/7), int(random(20,60)), int(random(1,10)));
  }
}
  
void startCircles2(){
  for (int i=0; i<newRocks.length; i++) {
    newRocks[i].displayRocks();
    newRocks[i].moveRocks();
    newRocks[i].bounceRocks();
    newRocks[i].deathRocks();
  }
}

//class for everyt

class rocks {
  float xCoor;
  float yCoor;
  int rad;
  int ySpeed;
  int z=3;
  rocks(float x, float y, int r, int ys) {
    xCoor=x;
    yCoor=y;
    rad=r;
    ySpeed=ys;
  }
  //creates and displays the rocks on the screeen
  void displayRocks() {
    fill(124, 99, 49);
    strokeWeight(2);
    stroke(random(255), random(255), random(255));
    //rect(xCoor,yCoor,rad,rad);
    image(img,xCoor,yCoor,rad,rad);
  }
  //moves rocks
  void moveRocks() {
    yCoor+=ySpeed;
  }
  //respondsible for the death screen and making you die
void deathRocks() {
 if(yCoor>=yC&&xCoor>=xC-30&&xCoor<=xC+80){
  ySpeed=0;
  background(0);
  fill(random(255), random(255), random(255));
  textSize(30);
  textAlign(CENTER);
  text("You have died!", 600, 200);
  textSize(25);
  text("Press a key to restart", 600, 300);
 }else{
   ySpeed=(int)random(2,7);
 }
 //if key is pressed then the code will reset
    if(keyPressed){
      if(key=='r'||key=='R'){
        drawStartScreen();
        begin=false;
        a=3;
  }
 }
}
//makes rocks move down the screen
  void bounceRocks() {
    if (xCoor<=0) {
      while (z>0) {
        xCoor+=SxSpeed;
        z--;
      }
    }
    //creates boundary
      if (xCoor>=width) {
      while (z>0) {
        xCoor-=SxSpeed;
        z--;
      }
      //code responsible for making asteroids reapear at 
      //top of screen
      if(yCoor>=height){
        x++;
        yCoor=0;
        xCoor=0;
      }
     }
     //reapears asteroids
     if(yCoor>=700){
       yCoor=0;
     }
    }
   }
   void drawShip() {
  strokeWeight(1);
  fill(255, 0, 0);
  rect(xCoor2, yCoor2-30, 10, 10);
  fill(0, 255, 0);
  rect(xCoor2, yCoor2, 50, 50);
  rectMode(CORNER);
  fill(0);
  noStroke();
  rect(xC,yC,w2,3);
  rectMode(CENTER);
}
void moveShip() {
  if (keyPressed){
  if(key=='a'||key=='A') {
      xCoor2-=25;
      xC-=25;
    }
    if (key=='d'||key=='D') {
      xCoor2+=25;
      xC+=25;
    }
  }
}
void bounceship() {
  if (xCoor2-25<=0) {
    xCoor2=25;
    xC=25;
  }
  if (xCoor2+25>=width) {
    xCoor2=width-25;
    xC=width-20;
  }
}
